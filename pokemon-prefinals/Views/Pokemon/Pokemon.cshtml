@model PokemonApp.Models.DetailedPokemon

@{
    ViewData["Title"] = Model.Name;
}

<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .back-btn {
            margin-top: 1rem;
            
        }

        .back-link {
            display: inline-block;
            text-align:center;
            padding: 8px 16px;
            background-color: #333;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
            width: 100%;
            max-width: 900px; /* Optional: Set a maximum width for the button */
        }

            .back-link:hover {
                background-color: #555;
                color: white;
            }


        .pokemon-details {
            margin-top: 4.5rem;
            padding: 2rem;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
            text-align: center:
        }

            .pokemon-details img {
                width: 200px;
                height: auto;
                margin-bottom: 1rem;
            }

        .details {
            gap: 16px;
            display: flex;
            flex-direction: column;
            text-align: center;
        }



        .dsc {
            display: flex;
            font-size: 1.2rem;
            gap: 0.4rem;
        
            margin: 0;
            padding: 0;
            color: black;
        }

            .dsc span {
                font-weight: bold;
                color: #ead70b;
            }

            .dsc div {
                display: flex;
                gap: 8px;
                flex-wrap: wrap;
            }

        .type-badge {
            background-color: #ead70b;
            padding: 4px 8px;
            border-radius: 4px;
            color: black;
            font-size: 0.9rem;
        }

        .move-ctn {
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
        }

            .move-ctn p {
                background-color: black;
                padding: 4px 8px;
                border-radius: 4px;
                color: white;
                font-size: 0.9rem;
            }

        .details p {
            margin: 0;
        }
    </style>
</head>

<div class="pokemon-details text-center">
    <img src="@Model.Sprites.Other.DreamWorld.FrontDefault" alt="@Model.Name" class="img-fluid" />
    <div class="details">
        <h1 class="text-left">@Model.Name Info</h1>

        <div class="dsc">
            <span>Name: </span>
            <p>@Model.Name</p>
        </div>

        <div class="dsc">
            <span>Type(s): </span>
            <div>
                @foreach (var type in Model.Types)
                {
                    <p class="type-badge">@type.Type.Name</p>
                }
            </div>
        </div>

        <div class="dsc">
            <span>Abilities: </span>
            <div>
                @foreach (var ability in Model.Abilities)
                {
                    <p class="type-badge">@ability.Ability.Name</p>
                }
            </div>
        </div>

        <div class="dsc col">
            <p>Moves: </p>
            <div class="move-ctn">
                @foreach (var move in Model.Moves)
                {
                    <p>@move.Move.Name</p>
                }
            </div>
        </div>

        <!-- Back Button -->
        <div class="back-btn">
            <a href="javascript:history.back()" class="back-link">Back</a>
        </div>
    </div>
</div>
